<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardView_root"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    app:cardCornerRadius="@dimen/corner_radius"
    app:elevation="@dimen/elevation_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_Xsmall">

        <ImageView
            android:id="@+id/cardView_icon_image_view"
            android:layout_width="@dimen/imgSize_medium"
            android:layout_height="@dimen/imgSize_medium"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/cardView_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="some/some/some" />

    </LinearLayout>

</androidx.cardview.widget.CardView>