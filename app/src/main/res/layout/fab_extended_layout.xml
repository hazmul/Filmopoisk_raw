<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_watchlist_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:backgroundTint="@color/colorSecondary"
        android:contentDescription="@string/menu_watchlist"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/baseline_watch_later_24"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/add_watchlist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:text="@string/menu_watchlist"
        app:layout_constraintBottom_toBottomOf="@+id/add_watchlist_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_watchlist_fab"
        app:layout_constraintTop_toTopOf="@+id/add_watchlist_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_favorites_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:backgroundTint="@color/colorSecondary"
        android:contentDescription="@string/menu_favorites"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@+id/add_watchlist_fab"
        app:layout_constraintStart_toStartOf="@+id/add_watchlist_fab"
        app:layout_constraintTop_toBottomOf="@+id/add_watchlist_fab"
        app:srcCompat="@drawable/baseline_favorite_24"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/add_favorites_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:text="@string/menu_favorites"
        app:layout_constraintBottom_toBottomOf="@+id/add_favorites_fab"
        app:layout_constraintEnd_toStartOf="@+id/add_favorites_fab"
        app:layout_constraintTop_toTopOf="@+id/add_favorites_fab" />
</androidx.constraintlayout.widget.ConstraintLayout>