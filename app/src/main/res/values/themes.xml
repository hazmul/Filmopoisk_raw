<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Filmopoisk_Raw" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Dark_blue</item>
        <item name="colorPrimaryVariant">@color/Light_blue</item>
        <item name="colorOnPrimary">@color/Light_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Dark_blue</item>
        <item name="colorSecondaryVariant">@color/Light_blue</item>
        <item name="colorOnSecondary">@color/Light_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_launcher</item>
    </style>

    <style name="Theme.Filmopoisk_Raw.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Filmopoisk_Raw.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Filmopoisk_Raw.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Launcher" parent="Theme.Filmopoisk_Raw.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
    </style>
</resources>